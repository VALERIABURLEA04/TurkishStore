@using System.Web.Optimization

@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null; // Or use Layout = "~/Views/Shared/_Layout.cshtml" if you want to include a master layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - SACCHARINE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark px-4">
        <span class="navbar-brand mb-0 h1"><i class="fas fa-user-shield me-2"></i>Admin Panel</span>
        <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-light">Logout</a>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light vh-100 p-3">
                <h5 class="mb-4">Menu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserList", "User")"><i class="fas fa-users me-2"></i>View Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProductList", "Shop")"><i class="fas fa-box-open me-2"></i>View Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Add", "Shop")"><i class="fas fa-plus me-2"></i>Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ContactMessages", "Admin")"><i class="fas fa-envelope me-2"></i>Check Messages</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
                <h2 class="mb-4">Welcome, Admin!</h2>

                <!-- Example Stats (optional) -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <h5 class="card-title">March Orders</h5>
                                <p class="card-text display-6">128</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <h5 class="card-title">April Orders</h5>
                                <p class="card-text display-6">56</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-danger">
                            <div class="card-body">
                                <h5 class="card-title">May Orders</h5>
                                <p class="card-text display-6">14</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-box-open me-2"></i>Manage Products</h5>
                                <p class="card-text">Add, edit, or remove products.</p>
                                <a href="@Url.Action("ProductList", "Shop")" class="btn btn-primary">View</a>
                                <a href="@Url.Action("Add", "Shop")" class="btn btn-success ms-2">Add</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-users me-2"></i>Manage Users</h5>
                                <p class="card-text">View and manage user roles.</p>
                                <a href="@Url.Action("UserList", "User")" class="btn btn-primary">View Users</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-envelope me-2"></i>Contact Messages</h5>
                                <p class="card-text">See messages from users.</p>
                                <a href="@Url.Action("ContactMessages", "Admin")" class="btn btn-primary">View Messages</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a2d4d5c68c.js" crossorigin="anonymous"></script>
</body>
</html>
