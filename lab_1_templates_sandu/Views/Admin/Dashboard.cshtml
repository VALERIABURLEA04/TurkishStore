@using System.Web.Optimization

@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null; // Or use Layout = "~/Views/Shared/_Layout.cshtml" if you want to include a master layout
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - SACCHARINE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/css")
</head>
<body>
    @Html.Partial("_Header")

    <div class="container mt-5">
        <h1 class="mb-4 text-center">Welcome to Admin Dashboard</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Manage Products</h4>
                        <p class="card-text">Add, update, or remove products from your store.</p>
                        <a href="@Url.Action("ProductList", "Shop")" class="btn btn-primary">View Products</a>
                        <a href="@Url.Action("Add", "Shop")" class="btn btn-success ms-2">Add New Product</a>
                    </div>
                </div>

                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Manage Users</h4>
                        <p class="card-text">View and manage user roles and permissions.</p>
                        <a href="@Url.Action("UserList", "Admin")" class="btn btn-primary">View Users</a>
                    </div>
                </div>

                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Manage Messages</h4>
                        <p class="card-text">View and manage contact messages.</p>
                        <a href="@Url.Action("ContactMessages", "Admin")" class="btn btn-primary">View Messages</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    @Html.Partial("_Footer");
</body>
</html>
