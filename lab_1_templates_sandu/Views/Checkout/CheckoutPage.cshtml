@using System.Web.Optimization
@{
    ViewBag.Title = "New In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SACCHARINE</title>
    @Styles.Render("~/bundles/css")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">



    
</head>
<body>
    @Html.Partial("_Header");

    <div class="co-container">
        <div class="co-section">
            <h2>Contact</h2>
            <div class="co-input-group">
                @*<label>Email</label>*@
                <input type="email" placeholder="Email">
            </div>
            <div class="co-checkbox">
                <input type="checkbox" checked> Email me with news and offers
            </div>
        </div>
        <div class="co-section">
            <h2>Delivery</h2>
            <div class="co-input-group">

                <select>
                    <option value="moldova">Moldova</option>
                </select>
            </div>
            <div class="co-row">
                <div class="co-input-group">

                    <input type="text" placeholder="First name">
                </div>
                <div class="co-input-group">

                    <input type="text" placeholder="Last name">
                </div>
            </div>
            <div class="co-input-group">

                <input type="text" placeholder="Company">
            </div>
            <div class="co-input-group">

                <input type="text" placeholder="Address">
            </div>
            <div class="co-input-group">

                <input type="text" placeholder="Apartment, suite, etc.">
            </div>
            <div class="co-row">
                <div class="co-input-group">

                    <input type="text" placeholder="Postal code (optional)">
                </div>
                <div class="co-input-group">

                    <input type="text" placeholder="City">
                </div>
            </div>
            <div class="co-input-group">

                <input type="text" placeholder="Phone">
            </div>
            <div class="co-checkbox">
                <input type="checkbox"> Save this information for next time
            </div>
        </div>
        <div class="co-section">
            <h2>Shipping method</h2>
            <div class="co-shipping-method">
                <span>European Delivery</span>
                <span>€5,500.00</span>
            </div>
        </div>
        <div class="co-section">
            <h2>Payment</h2>
            <p class="co-payment-info">All transactions are secure and encrypted.</p>
            <div class="co-payment-method">
                <span>iyzico - Credit and Debit Cards</span>
                <div>
                    <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="Mastercard">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" alt="Visa">

                </div>
            </div>
            <p class="co-payment-info">After clicking "Pay now", you will be redirected to iyzico - Credit and Debit Cards to complete your purchase securely.</p>
        </div>
        <div class="co-section">
            <h2>Billing address</h2>
            <div class="co-radio-group">
                <input type="radio" name="billing" checked> Same as shipping address
            </div>
            <div class="co-radio-group">
                <input type="radio" name="billing"> Use a different billing address
            </div>
        </div>
        <button class="co-button">Pay now</button>

        <div class="co-links">
            <a href="#">Refund policy</a>
            <a href="#">Privacy policy</a>
            <a href="#">Terms of service</a>
            <a href="#">Cookie preferences</a>
        </div>
    </div>
    @Html.Partial("_Footer");
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>