@using System.Web.Optimization
@model lab_1_templates_sandu.Models.Auth.UserDataLogin

@{
    ViewBag.Title = "About";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -SACCHARINE</title>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    @Styles.Render("~/bundles/css")
</head>

<body>

    <div id="background_image_log">


        @Html.Partial("_Header");


        <div class="container py-5">
            <div class="background-image"></div>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow rounded-4 border-0">
                        <div class="card-body p-5">
                            <h2 class="mb-4 text-center text-primary fw-bold">Login</h2>
                            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(m => m.NameOrEmail, new { @class = "form-control", placeholder = "Name or Email" })
                                    @Html.ValidationMessageFor(m => m.NameOrEmail, "", new { @class = "text-danger small" })
                                </div>

                                <div class="form-floating mb-4">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parolă" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">Login</button>
                            }

                            <div class="text-center mt-4">
                                <small>Don't have an account? <a href="@Url.Action("Register", "Auth")" class="text-decoration-none fw-medium">Register here</a>.</small>
                            </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>

                <style>

                    .card input.form-control {
                        max-width: 100%;
                    }

                    .create-account {
                        margin-top: 15px;
                        font-size: 0.9rem;
                    }

                        .create-account a {
                            color: #666;
                            text-decoration: none;
                        }

                            .create-account a:hover {
                                text-decoration: underline;
                            }
                </style>
                @Html.Partial("_Footer");


</body>