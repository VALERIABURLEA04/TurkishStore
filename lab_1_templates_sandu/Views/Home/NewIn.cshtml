@using System.Web.Optimization
@{
    ViewBag.Title = "New In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SACCHARINE</title>
    @Styles.Render("~/bundles/css")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        .product-card {
            border: none;
            margin-bottom: 40px;
        }

        .product-image {
            height: 500px;
            object-fit: cover;
            margin-bottom: 15px;
        }

        .product-title {
            font-weight: bold;
            font-size: 1.2rem;
        }

        .product-price {
            color: #777;
        }
    </style>
</head>
<body>
    @Html.Partial("_Header");

    <div class="container mt-5">
        <h1 class="text-center mb-4">NEW IN</h1>
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <div class="product-card">
                    <img src="~/Content/images/dress1.png" class="img-fluid product-image" alt="Ruby Dress" />
                    <div class="product-title">RUBY</div>
                    <div class="product-price">1500 MDL</div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="product-card">
                    <img src="~/Content/images/dress2.png" class="img-fluid product-image" alt="Vanessa Dress" />
                    <div class="product-title">VANESSA</div>
                    <div class="product-price">1800 MDL</div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="product-card">
                    <img src="~/Content/images/dress3.png" class="img-fluid product-image" alt="Angel Dress" />
                    <div class="product-title">ANGEL</div>
                    <div class="product-price">38,410 MDL</div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="product-card">
                    <img src="~/Content/images/dress1.png" class="img-fluid product-image" alt="Ruby Dress" />
                    <div class="product-title">RUBY</div>
                    <div class="product-price">1500 MDL</div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
