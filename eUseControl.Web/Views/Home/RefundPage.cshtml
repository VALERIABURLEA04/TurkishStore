@using System.Web.Optimization

@{
    ViewBag.Title = "Cancellation and Refund";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SACCHARINE</title>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    

    @Styles.Render("~/bundles/css")
</head>

<body class="pagina-refund">
    @Html.Partial("_Header");

    <div class="refund-section">
        <div class="refund-content">
            <h2>Cancellation and Refund Conditions</h2>
            <p>
                The products you buy from <strong>SACCHARINE</strong> are individually produced.
                For this reason, we would like to emphasize that there are no exchanges or returns
                on products ordered from our site. You can contact us for your questions on the subject.
            </p>
        </div>
    </div>

    @Html.Partial("_Footer");
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
