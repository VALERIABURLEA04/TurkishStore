@using businessLogic.Dtos.BlogDtos;
﻿@using System.Web.Optimization;
@model List<BlogPostDto>
@{
    ViewBag.Title = "Blog";
}

<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url(@Url.Content("~/Content/images/bg-02.jpg"));">
    <h2 class="ltext-105 cl0 txt-center">
        Blog
    </h2>
</section>

<section class="bg0 p-t-62 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-9 p-b-80">
                <div class="p-r-45 p-r-0-lg">
                    @foreach (var post in Model)
                    {
                        <div class="p-b-63">
                            <a href="@Url.Action("Detail", "Blog", new { id = post.Id })" class="hov-img0 how-pos5-parent">
                                <img src="@Url.Content(post.ImageUrl)" alt="@post.Title" />
                                <div class="flex-col-c-m size-123 bg9 how-pos5">
                                    <span class="ltext-107 cl2 txt-center">@post.Day</span>
                                    <span class="stext-109 cl3 txt-center">@post.MonthYear</span>
                                </div>
                            </a>
                            <div class="p-t-32">
                                <h4 class="p-b-15">
                                    <a href="@Url.Action("Detail", "Blog", new { id = post.Id })" class="ltext-108 cl2 hov-cl1 trans-04">
                                        @post.Title
                                    </a>
                                </h4>
                                <p class="stext-117 cl6">
                                    @post.Content.Substring(0, Math.Min(post.Content.Length, 100))...
                                </p>
                                <div class="flex-w flex-sb-m p-t-18">
                                    <span class="flex-w flex-m stext-111 cl2 p-r-30 m-tb-10">
                                        <span><span class="cl4">By</span> @post.Author <span class="cl12 m-l-4 m-r-6">|</span></span>
                                        <span>@post.Categories.Replace(",", ", ") <span class="cl12 m-l-4 m-r-6">|</span></span>
                                        <span>@post.CommentsCount Comments</span>
                                    </span>
                                    <a href="@Url.Action("Detail", "Blog", new { id = post.Id })" class="stext-101 cl2 hov-cl1 trans-04 m-tb-10">
                                        Continue Reading <i class="fa fa-long-arrow-right m-l-9"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Pagination as needed -->
                </div>
            </div>
            <!-- Sidebar... -->
        </div>
    </div>
</section>