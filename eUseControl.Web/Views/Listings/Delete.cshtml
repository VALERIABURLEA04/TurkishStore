﻿@using System.Web.Optimization
@model eUseControl.Domain.Entities.Listings.Listing

@{
     ViewBag.Title = "Delete Listing";
     Layout = null; // full page structure
}

<!DOCTYPE html>
<html lang="ro">
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1" />
     <title>@ViewBag.Title - SACCHARINE</title>

     <script src="~/Scripts/modernizr-2.6.2.js"></script>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

     @Styles.Render("~/bundles/css")
</head>
<body>
     @Html.Partial("_Header")

     <div class="container mt-4">
          <h2>@ViewBag.Title</h2>
          <h4>Are you sure you want to delete this listing?</h4>
          <hr />
          <dl class="row">
               <dt class="col-sm-2">Title</dt>
               <dd class="col-sm-10">@Model.Title</dd>

               <dt class="col-sm-2">Description</dt>
               <dd class="col-sm-10">@Model.Description</dd>

               <dt class="col-sm-2">Price</dt>
               <dd class="col-sm-10">$@Model.Price</dd>

               <dt class="col-sm-2">Created At</dt>
               <dd class="col-sm-10">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
          </dl>

          <form method="post" action="@Url.Action("Delete", new { id = Model.Listings_Id })">
               @Html.AntiForgeryToken()
               <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
               </button>
               @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
          </form>
     </div>
</body>
</html>