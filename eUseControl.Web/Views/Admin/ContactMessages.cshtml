@using System.Web.Optimization
@model IEnumerable<eUseControl.Domain.Entities.User.UContactData>

@{
    ViewBag.Title = "Contact Messages";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SACCHARINE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    @Styles.Render("~/bundles/css")

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
        }

        .content-wrapper {
            padding: 40px;
            min-height: 90vh;
        }

        .message-card {
            background: #fff;
            padding: 25px 60px 25px 25px; /* extra right padding to avoid overlap */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            margin-bottom: 20px;
            position: relative;
        }

            .message-card h5 {
                color: #007bff;
                margin-bottom: 10px;
            }

        .message-meta {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .message-content {
            font-size: 15px;
        }

        .delete-btn {
            position: absolute;
            top: 20px;
            right: -1039px;
            z-index: 2;
        }
    </style>
</head>

<body>
    @Html.Partial("_Header")

    <div class="container content-wrapper">
        <h2 class="text-center mb-4">Contact Messages</h2>

        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary mb-4">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>


        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">No contact messages available.</div>
        }
        else
        {
            foreach (var msg in Model)
            {
                <div class="message-card">
                    <!-- Delete Button -->
                    @using (Html.BeginForm("DeleteContact", "Admin", FormMethod.Post, new { @class = "delete-btn" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", msg.Id)
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this message?')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    }

                    <!-- Only Subject is Clickable -->
                    <h5>
                        <a href="@Url.Action("Message", "Admin", new { id = msg.Id })">@msg.Subject</a>
                    </h5>

                    <div class="message-meta">
                        <strong>From:</strong> @msg.Name (@msg.Email)
                    </div>
                    <div class="message-content">
                        @((msg.Message.Length > 100) ? msg.Message.Substring(0, 100) + "..." : msg.Message)
                    </div>
                </div>
            }
        }
    </div>

    <footer class="text-center mt-4 p-3 bg-light">
        &copy; 2025 SACCHARINE. All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @Html.Partial("_Footer");
</body>
</html>
