@using System.Web.Optimization
@model eUseControl.Web.Models.Contact.ContactMessageModel

@{
    ViewBag.Title = "Message Details";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SACCHARINE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/css")

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
        }

        .content-wrapper {
            padding: 40px;
            min-height: 90vh;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .back-btn {
            margin-bottom: 20px;
        }

        .message-body {
            background-color: #f1f1f1;
            padding: 20px;
            border-radius: 6px;
            white-space: pre-wrap;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark px-4">
        <span class="navbar-brand mb-0 h1"><i class="fas fa-user-shield me-2"></i>Admin Panel</span>
        <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-light">Logout</a>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light vh-100 p-3">
                <h5 class="mb-4">Menu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserList", "User")"><i class="fas fa-users me-2"></i>View Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProductList", "Shop")"><i class="fas fa-box-open me-2"></i>View Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Add", "Shop")"><i class="fas fa-plus me-2"></i>Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ContactMessages", "Admin")"><i class="fas fa-envelope me-2"></i>Check Messages</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 content-wrapper">
                <a href="@Url.Action("ContactMessages", "Admin")" class="btn btn-secondary back-btn">
                    <i class="fas fa-arrow-left"></i> Back to Messages
                </a>

                <div class="card p-4">
                    <h4 class="mb-3">@Model.Subject</h4>
                    <p><strong>From:</strong> @Model.Name (@Model.Email)</p>
                    <hr />
                    <p><strong>Message:</strong></p>
                    <div class="message-body">
                        @Model.Message
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>