@using System.Web.Optimization
@using BusinessLogic.DBModel
@using eUseControl.Domain.Entities.Product;
@model Product

@{
    ViewBag.Title = "Add Product";
    Layout = null; // or your layout if you have one
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - SACCHARINE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/css")
</head>
<body>
    @Html.Partial("_Header")

    <div class="container mt-5 mb-5">
        <h2 class="text-center mb-4">Add New Product</h2>

        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                @using (Html.BeginForm("Add", "Shop", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control mw-100", placeholder = "Product Name" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control mw-100", placeholder = "Product Description", rows = 3 })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Price, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control mw-100", placeholder = "Product Price", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ImageUrl, "Image URL", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control mw-100", placeholder = "https://example.com/image.jpg" })
                        @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" for="ImageUpload">Upload Product Image</label>
                        <input type="file" name="ImageUpload" class="form-control mw-100" accept="image/*" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Add Product</button>
                        @Html.ActionLink("Back to List", "ProductList", "Admin", null, new { @class = "btn btn-secondary ms-2" })
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
    @Html.Partial("_Footer");
</body>
</html>