        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav mx-auto">

                <li class="nav-item mx-3"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>

                <!-- Link pentru About Us -->
                <li class="nav-item mx-3"><a class="nav-link" href="@Url.Action("About", "Home")">About Us</a></li>

                <li class="nav-item mx-3"><a class="nav-link" href="@Url.Action("Shop", "Shop")">Shop </a></li>
                <li class="nav-item mx-3"><a class="nav-link" href="@Url.Action("NewIn", "Home")">New In</a></li>
                <li class="nav-item mx-3"><a class="nav-link" href="@Url.Action("ContactUs", "Home")">Contact Us</a></li>

