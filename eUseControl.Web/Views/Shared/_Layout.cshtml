    </script>
    <script src="~/Scripts/isotope/isotope.pkgd.min.js"></script>
    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <script>
        $('.js-addwish-b2').on('click', function (e) {
            e.preventDefault();
        });

        $('.js-addwish-b2').on('click', function (e) {
            e.preventDefault();

            var $btn = $(this);
            var nameProduct = $btn.closest('.block2').find('.js-name-b2').text().trim();

            var isNowAdded = !$btn.hasClass('js-addedwish-b2');
            $btn.toggleClass('js-addedwish-b2', isNowAdded);

            var actionText = isNowAdded ? 'added to' : 'removed from';
            swal(nameProduct, 'is ' + actionText + ' wishlist!', 'success');
        });

        $('.js-addwish-detail').on('click', function (e) {
            e.preventDefault();
            const $btn = $(this);
            const nameProduct = $btn.closest('.js-name-detail').text().trim() ||
                $btn.closest('.block2').find('.js-name-b2').text().trim();

            const isNowAdded = !$btn.hasClass('js-addedwish-detail');
            $btn.toggleClass('js-addedwish-detail', isNowAdded);

            const actionText = isNowAdded ? 'added to' : 'removed from';
            swal(nameProduct, `is ${actionText} wishlist!`, 'success');
        });

        $('.js-addcart-detail').on('click', function (e) {
            e.preventDefault();
            const $btn = $(this);
            const nameProduct = $btn.closest('.js-name-detail').text().trim() ||
                $btn.closest('.block2').find('.js-name-b2').text().trim();
            swal(nameProduct, 'is added to cart!', 'success');
        });
    </script>
    <script src="~/Scripts/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script>
        $('.js-pscroll').each(function () {
            $(this).css('position', 'relative');
            $(this).css('overflow', 'hidden');
            var ps = new PerfectScrollbar(this, {
                wheelSpeed: 1,
                scrollingThreshold: 1000,
                wheelPropagation: false,
            });

            $(window).on('resize', function () {
                ps.update();
            })
        });
    </script>
    <script src="~/Scripts/js/main.js"></script>

    <script>
        const isAuthenticated = @Html.Raw(Session["LoginStatus"]?.ToString() == "login" ? "true" : "false");

        function updateHeaderCount(delta) {
            const el = document.getElementById('favorite-count');
            if (!el) return;
            let cnt = parseInt(el.getAttribute('data-notify')) || 0;
            cnt = Math.max(0, cnt + delta);
            el.setAttribute('data-notify', cnt);
        }

        function getFavoritesCookie() {
            const name = "favorites=";
            const parts = decodeURIComponent(document.cookie).split(';');
            for (let c of parts) {
                c = c.trim();
                if (c.indexOf(name) === 0) {
                    try { return JSON.parse(c.substring(name.length)); }
                    catch { return []; }
                }
            }
            return [];
        }

        function setFavoritesCookie(list) {
            const d = new Date();
            d.setTime(d.getTime() + 30 * 24 * 60 * 60 * 1000);
            document.cookie = `favorites=${JSON.stringify(list)};expires=${d.toUTCString()};path=/`;
        }

        document.addEventListener("DOMContentLoaded", () => {
            if (!isAuthenticated) {
                const favs = getFavoritesCookie();
                favs.forEach(id => {
                    const anchor = document.getElementById(`wish-${id}`);
                    if (anchor) anchor.classList.add('addedwish');
                });
            }
        });

        const emptySrc = '/Content/images/icons/icon-heart-01.png';
        const fullSrc = '/Content/images/icons/icon-heart-02.png';

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.js-addwish-b2').forEach(el => {
                const id = +el.getAttribute('data-product-id');
                const img = document.getElementById(`heart-${id}`);
                if (isAuthenticated) {
                    if (el.classList.contains('favorited')) {
                        img.src = fullSrc;
                    }
                } else {
                    if (getFavoritesCookie().includes(id)) {
                        img.src = fullSrc;
                    }
                }
            });
        });

        function toggleFavorite(productId) {
            const img = document.getElementById(`heart-${productId}`);
            if (isAuthenticated) {
                fetch(`/Shop/ToggleFavorite/${productId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id: productId })
                })
                    .then(r => r.json())
                    .then(data => {
                        img.src = data.isFavorite ? fullSrc : emptySrc;
                        updateHeaderCount(data.isFavorite ? +1 : -1);
                        document.getElementById(`wish-${productId}`)
                            .classList.toggle('favorited', data.isFavorite);
                    });
            } else {
                let favs = getFavoritesCookie();
                const idx = favs.indexOf(productId);
                const add = idx === -1;
                if (add) favs.push(productId);
                else favs.splice(idx, 1);
                setFavoritesCookie(favs);
                img.src = add ? fullSrc : emptySrc;
                updateHeaderCount(add ? +1 : -1);
            }
        }
    </script>

    @Scripts.Render("~/bundles/js")
    @RenderSection("Scripts", required: false)
</body>
</html>